        <xpath expr="//body" position="inside">
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                const path = window.location.pathname.replace(/\/$/, '').toLowerCase();
                console.log(path);
                const navLinks = {
                '': 'nav-home',
                '/about': 'nav-about',
                '/careers': 'nav-careers',
                '/contact': 'nav-contact',

                };

                // Remove 'active' class from all nav links
                document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
                });

                // Add 'active' class to the current nav link
                const navItem = document.getElementById(navLinks[path]);
                if (navItem) {
                navItem.classList.add('active');
                }
                });

                document.querySelectorAll('.menu-item > a').forEach((menuItem) => {
                menuItem.addEventListener('click', (e) => {
                const parentItem = e.target.parentElement;

                if (window.innerWidth &lt;= 768) {
                e.preventDefault(); // Prevent navigation
                parentItem.classList.toggle('open'); // Toggle class to show/hide submenu
                }
                });
                });


            </script>
